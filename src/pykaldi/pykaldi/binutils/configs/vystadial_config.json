{
    "COMMENT 00": "SETUP FILE FOR VYSTADIAL PROJECT",
    "COMMENT 01": "If using the prefix & value dictionaries do not forget,",
    "COMMENT 02": "to add slash / at the end of prefix!",
    "data_dir": "./vystadial-sample-test/data/test/",
    "exp_dir": "./vystadial-sample-test/exp/tri1/",
    "decode_dir": {"prefix": "exp_dir", "value": "decode/"},
    "wav_scp": {"prefix": "data_dir", "value": "input.scp"},
    "wst": {"prefix": "exp_dir", "value": "/graph/words.txt"},
    "online-python": {
        "run": "yes",
        "typeUNUSED": "recreate_dec",
        "typeUNUSED": "decode_once",
        "typeUNUSED": "no_finish",
        "type": "decode_zig_zag",
        "COMMENT 04": "1:2:3:4:5 are silent phones",
        "args": [   "--verbose=0", "--acoustic-scale=0.1", 
                    "--config=configs/online_python.config",
                    {"prefix": "exp_dir", "value": "final.mdl"},
                    {"prefix": "exp_dir", "value": "graph/HCLG.fst"},
                    {"prefix": "wst", "value": ""},
                    "1:2:3:4:5"
                ],
        "trans": {"prefix": "decode_dir", "value": "vystadial.tra"},
        "samples_per_frame":"4560"
    },
    "wer-compute": {
        "run": "yes",
        "build_ref": "yes",
        "config": "configs/wer.config",
        "reference": {"prefix": "decode_dir", "value": "vystadial-reference.tra"},
        "hypothesis": [ 
                        {"prefix": "decode_dir", "value": "vystadial.tra"}
                ]
   }
}
